/**index.wxss**/
@import '../../css/common.wxss';

.main{
  min-height: 100vh;
  background-color: #F0EFF5;
  overflow-x: hidden;
}
.main>.container{
  background:#fff;
}
.header {
  width: 100%;
  height: 300rpx;
  background-color: #6995fe;
  /*4、有四个值，其中第一个值是设置 top-left 而第二个值是 top-right 第三个值 bottom-right 第四个值是设置 bottom-left*/
  color: #fff;
  text-align: center;
}

.bu {
  position: relative;
  bottom: 56rpx;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx; 
  background-color: #6995fe;
  border-radius: 50% / 55rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}

.suc {
  font-size: 60rpx;
  padding: 46rpx 0 8rpx 0;
}

.wait {
  font-size: 26rpx;
  padding-bottom: 24rpx;
}

.Countdown {
  font-size: 28rpx;
}

.userinfo {
  margin: 22% 0 36rpx 0;
}

.badge {
  width: 100rpx;
  height: 100rpx;
}

.status {
  display: flex;
  margin: -30rpx 0 50rpx 0;
  justify-content: center;
}

.now {
  align-self: center;
  font-size: 35rpx;
}

.nowStatus {
  position: relative;
  font-size: 25rpx;
  top: 22rpx;
  right: 74rpx;
}

.enter {
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  color: #fff;
  background: #6995fe;
}

.pro {
  width: calc(100% - 200rpx);
}

.img {
  width: calc(100% - 200rpx);
  display: flex;
  justify-content: space-around;
}

.bg {
  width: 750rpx;
  height: 540rpx;
}

.bgOne {
  margin-top: 16%;
}

.right {
  padding-left: 6rpx;
  width: 25rpx;
