}

.actintro {
  text-align: center;
  font-size: 30rpx;
  color: #6995fe;
}

.yuan {
  position: relative;
  width: 30rpx;
  height: 30rpx;
  bottom: 27rpx;
}

.luren {
  right: 50rpx;
}

.xinxiu {
  right: 25rpx;
}

.xiaoka {
  right: 0rpx;
}

.daka {
