}

.juxing {
  right: -50rpx;
}

.xx {
  width: 100%;
  position: relative;
  bottom: 30rpx;
  left: 76rpx;
  font-size: 24rpx;
  margin-bottom:30rpx;
}

.xx>text:not(:last-child) {
  padding-right: 86rpx;
}
.next{
  width: 100%;
  text-align: left;
  color:#B4B4B4;
  font-size:26rpx;
  margin-left:90rpx;
  padding-bottom:15rpx;
  border-bottom:1rpx solid #ccc;
}
.number{
  font-size:32rpx;
  color:#FC5A3B;
}
.friend{
  width: 100%;
  text-align: left;
  font-size:32rpx;
