<!--pages/cpIntro/index.wxml-->
<view class='container'>
  <view class='titOne'>基本信息</view>
  <form bindsubmit="personHandle" class='form'>
    <!-- <view class="section">
      <label class="title">
        <text>微信</text>
        <text>*</text>
      </label>
      <input placeholder='请填写你的微信号' placeholder-style="text-align:right" bindconfirm='wxInput' value='{{wxh}}' name="wxh" />
    </view> -->
    <picker bindchange="pickGender" value="{{index}}" range="{{genderArray}}">
      <view class="section">
        <view class='wrapper'>
          <label class="title">性别</label>
          <input name="gender" class="content" value='{{userInfo.gender===1?"男":userInfo.gender===2?"女":""}}' placeholder='请填写' placeholder-style='color:#b2b2b2' disabled/>
        </view>
        <view class='right-arrow'>
          <image src='../../imgs/arrow.png'></image>
        </view>
      </view>
    </picker>
    <picker mode="date" value="{{date}}" start="1978-01-01" end="2000-12-31" bindchange="DateChange" name="birthday">
      <view class="section">
        <view class='wrapper'>
          <label class="title">生日</label>
          <view class='content date'>{{date}}</view>
        </view>
        <view class='right-arrow'>
          <image src='../../imgs/arrow.png'></image>
        </view>
      </view>
    </picker>
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}" name="region">
      <view class="section">
        <view class='wrapper'>
          <label class="title">所在地</label>
          <view class="content date">
            {{region[0]}}，{{region[1]}}，{{region[2]}}
          </view>
        </view>
        <view class='right-arrow'>
          <image src='../../imgs/arrow.png'></image>
        </view>
      </view>
    </picker>
    <picker bindchange="pickHeight" value='{{70||(userInfo.height? userInfo.height-100: "")||index}}' range="{{heightArr}}">
      <view class="section">
        <view class='wrapper'>
          <label class="title">身高</label>
          <input name="height" type="number" class="{{userInfo.height>0?'cons':'con'}}" placeholder='请填写' placeholder-style='color:#b2b2b2' value='{{userInfo.height>0?userInfo.height:""}}' disabled/>
          <text class='unit' hidden='{{userInfo.height==0||userInfo.height==null}}'>cm</text>
        </view>
        <view class='right-arrow'>
          <image src='../../imgs/arrow.png'></image>
        </view>
      </view>
    </picker>
    <picker bindchange="pickWeight" value='{{40||(userInfo.weight? userInfo.weight-30: "")||index}}' range="{{weightArr}}">
      <view class="section">
        <view class='wrapper'>
          <label class="title">体重</label>
          <input name="weight" type="number" class="{{userInfo.weight>0?'cons':'con'}}" placeholder='请填写' placeholder-style='color:#b2b2b2;' value='{{userInfo.weight>0?userInfo.weight:""}}' disabled/>
          <text class='unit' hidden='{{userInfo.weight==0||userInfo.weight==null}}'>kg</text>
        </view>
        <view class='right-arrow'>
          <image src='../../imgs/arrow.png'></image>
        </view>
      </view>
    </picker>
    <view class='makeup'>
      <view class="section">
        <label class="title">学校</label>
        <input placeholder='请填写你的学校' placeholder-style='color:#b2b2b2' class='col' bindconfirm='wxSchool' value='{{school}}' name="school" />
      </view>
    </view>
    <picker bindchange="pickEducational" value="{{index}}" range="{{EducationalArray}}" name="educational">
      <view class="section bor">
        <view class='wrapper'>
          <label class="title">学历</label>
          <view class='content date' wx:if="{{index}}">{{EducationalArray[index]}}</view>
          <view class='content date' wx:else>请填写</view>
        </view>
        <view class='right-arrow'>
          <image src='../../imgs/arrow.png'></image>
        </view>
      </view>
    </picker>
    <view class='titOne'>兴趣爱好</view>
    <view class='hobyCont'>
      <view class='dei'>我喜欢打篮球、足球、拍照。喜欢听轻音乐。喜欢的电影是美丽人生、西线无战事。喜欢阅读《五年高考十年模拟》、《唐吉坷德》、《杂志》。我喜欢猫。</view>
    </view>
    <view class='titOne'>自我介绍</view>
    <view class='makeup'>
      <view class="section intro">
        <view class="self">我的成长经历</view>
        <textarea placeholder="请填写自我介绍" placeholder-style='color:#B2B2B2;' name="introduce" bindconfirm='introYself' auto-height='true' />
      </view>
      <view class="section intro">
        <view class="self">我的未来规划</view>
        <textarea placeholder="未来规划" placeholder-style='color:#B2B2B2;' name="futureDoing" bindconfirm='introFutu' auto-height='true' />
      </view>
      <view class="section intro">
        <view class="self">我最近在做的事</view>
        <textarea placeholder="最近正在做啥" placeholder-style='color:#B2B2B2;' name="nowDoing" bindconfirm='introNow' auto-height='true' />
      </view>
      <view class="section intro">
        <view class="self">我的优点</view>
        <textarea placeholder="请填写自己的优点" placeholder-style='color:#B2B2B2;' name="myYou" bindconfirm='introYou' auto-height='true' />
      </view>
      <view class="section intro">
        <view class="self">我的缺点</view>
        <textarea placeholder="请填写自己的缺点" placeholder-style='color:#B2B2B2;' name="myQue" bindconfirm='introQue' auto-height='true' />
      </view>
    </view>
    <view class="dd">已经到底咯亲~</view>
  </form>

</view>